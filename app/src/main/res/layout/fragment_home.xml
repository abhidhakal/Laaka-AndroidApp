<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    tools:ignore="HardcodedText"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".fragments_dashboard.HomeFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginHorizontal="10dp"
                    android:background="@color/white"
                    android:scrollbars="none">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:background="@color/white"
                            android:gravity="start">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="5sp">

                                <ImageView
                                    android:id="@+id/image1"
                                    android:layout_width="420dp"
                                    android:layout_height="200dp"
                                    android:src="@drawable/nikedunks">
                                </ImageView>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="5sp">

                                <ImageView
                                    android:id="@+id/image2"
                                    android:layout_width="420dp"
                                    android:layout_height="200dp"
                                    android:background="@color/white"
                                    android:src="@drawable/adidasspezial">
                                </ImageView>
                            </LinearLayout>

                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                </HorizontalScrollView>

            </LinearLayout>

            <LinearLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="200dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginVertical="5dp"
                    android:text="Recommended For You"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textStyle="bold">
                </TextView>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginTop="10sp"
                    android:background="@color/white"
                    android:scrollbars="none">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:layout_gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="start">

                            <LinearLayout
                                android:layout_width="200dp"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:layout_marginHorizontal="5sp"
                                android:elevation="15dp"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="170dp"
                                    android:background="@color/white"
                                    android:layout_marginHorizontal="2dp"
                                    android:layout_marginVertical="15dp"
                                    android:src="@drawable/af1">
                                </ImageView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    android:text="Nike Air Force 1's">
                                </TextView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:textStyle="italic"
                                    android:text="click for details">
                                </TextView>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="200dp"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:layout_marginHorizontal="5sp"
                                android:elevation="15dp"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="170dp"
                                    android:background="@color/white"
                                    android:layout_marginHorizontal="2dp"
                                    android:layout_marginVertical="15dp"
                                    android:src="@drawable/superstars">
                                </ImageView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    android:text="Adidas Superstars">
                                </TextView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:textStyle="italic"
                                    android:text="click for details">
                                </TextView>

                            </LinearLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </HorizontalScrollView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Shop By Category"
                        android:layout_marginHorizontal="10sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="18sp">
                    </TextView>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">



                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5sp"
                        android:layout_marginBottom="10sp"
                        android:text="Walk Back In Time"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold">
                    </TextView>

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="270dp"
                        android:background="@color/white"
                        android:scrollbars="none">

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:layout_gravity="center_vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:gravity="start">

                                <LinearLayout
                                    android:layout_width="250dp"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:layout_marginHorizontal="5sp"
                                    android:gravity="center">

                                    <ImageView
                                        android:layout_width="200sp"
                                        android:layout_height="170sp"
                                        android:contentDescription="af1"
                                        android:background="@color/white"
                                        android:layout_marginVertical="20dp"
                                        android:src="@drawable/cardview_layout">
                                    </ImageView>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/black"
                                        android:textSize="15dp"
                                        android:textStyle="bold"
                                        android:text="Adidas Samba">
                                    </TextView>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/black"
                                        android:textStyle="italic"
                                        android:text="click for details">
                                    </TextView>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="250dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginHorizontal="5sp"
                                    android:orientation="vertical"
                                    android:gravity="center">

                                    <ImageView
                                        android:layout_width="200sp"
                                        android:layout_height="170sp"
                                        android:contentDescription="af1"
                                        android:layout_marginVertical="20dp"
                                        android:src="@drawable/cardview_layout">
                                    </ImageView>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/black"
                                        android:textSize="15dp"
                                        android:textStyle="bold"
                                        android:text="Adidas Superstars">
                                    </TextView>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/black"
                                        android:textStyle="italic"
                                        android:text="click for details">
                                    </TextView>

                                </LinearLayout>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </HorizontalScrollView>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="20dp"
                        android:background="#909090">
                    </View>

                </LinearLayout>
            </LinearLayout>

        </FrameLayout>

    </androidx.core.widget.NestedScrollView>

</FrameLayout>